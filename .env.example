# Required environment variables

# Database connection string (PostgreSQL)
# Example: postgresql://USER:PASSWORD@HOST:PORT/DBNAME?sslmode=require
DATABASE_URL=

# JWT secret used for admin authentication tokens
# Use a strong, random string (at least 32 characters)
JWT_SECRET=

# DeepSeek API key (required for LLM features: keyword generation, enrichment, etc.)
DEEPSEEK_API_KEY=

# Google Custom Search Engine credentials (required for search & enrichment)
GOOGLE_CUSTOM_SEARCH_API_KEY=
GOOGLE_CUSTOM_SEARCH_ENGINE_ID=


# Optional environment variables

# Public base URL used in emails, sitemaps, etc. Defaults to http://localhost:3000
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# LLM tuning (optional)
KEYWORDS_LLM_MODEL=deepseek-chat
KEYWORDS_LLM_TEMPERATURE=0.3
KEYWORDS_DEBUG=false

# BuiltWith (optional, used by Tech Discovery feature)
BUILTWITH_API_KEY=

# Email verification sender (optional)
EMAIL_VERIFY_FROM=no-reply@verification.local
